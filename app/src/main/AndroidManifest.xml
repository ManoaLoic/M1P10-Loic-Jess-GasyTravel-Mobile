<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.gasytravel">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"> <!-- Utilise le thème sans ActionBar -->



        <!-- Autres activités (FicheActivity, SettingsActivity, ScrollingActivity) -->
        <activity
            android:name=".FicheActivity"
            android:exported="true"
            android:label="@string/title_activity_fiche"
            android:theme="@style/AppTheme" /> <!-- Utilise le thème sans ActionBar -->
        <activity
            android:name=".Detail"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="false"
            android:label="@string/title_activity_detail"
            android:theme="@style/Theme.GasyTravel.Fullscreen" />
        <activity
            android:name=".SettingsActivity"
            android:exported="false"
            android:label="@string/title_activity_settings"
            android:theme="@style/AppTheme" /> <!-- Utilise le thème sans ActionBar -->
        <activity
            android:name=".ScrollingActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" /> <!-- Utilise le thème sans ActionBar -->

        <!-- Activité Splash avec le thème spécifique -->
        <activity
            android:name=".ActivitySplash"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>
