<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/detail_list_fragment">

    <fragment
        android:id="@+id/detail_list_fragment"
        android:name="com.example.gasytravel.DetailListFragment"
        android:label="DetailListFragment" >
        <action
            android:id="@+id/show_detail_detail"
            app:destination="@id/detail_detail_fragment" />
    </fragment>
    <fragment
        android:id="@+id/detail_detail_fragment"
        android:name="com.example.gasytravel.DetailDetailFragment"
        android:label="detail_detail"
        tools:layout="@layout/fragment_detail_detail">
        <argument
            android:name="item_id"
            app:argType="string"
            android:defaultValue="" />
    </fragment>
</navigation>